@model IEnumerable<PType>


@{
    ViewBag.Title = "Типы покемонов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список типов покемонов</h2>

<p>
    @Html.ActionLink("Создать новый тип", "Create")

    @Html.ActionLink("Считать файл", "ReadFile")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.ActionLink("Редактирование", "Edit", new { id=item.idType }) |
            @Html.ActionLink("Информация", "Details", new { id=item.idType }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.idType })
        </td>
    </tr>
}

</table>
