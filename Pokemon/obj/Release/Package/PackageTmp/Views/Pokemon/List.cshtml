@model IEnumerable<Pokemon>

@{
    ViewBag.Title = "Список покемонов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список покемонов</h2>

<p>
    @Html.ActionLink("Создать покемона", "Create")

    @Html.ActionLink("Считать xml файл", "ReadXMLToDB")

    @Html.ActionLink("Считать файл", "ReadFile")

    @Html.ActionLink("Записать в xml файл", "writeXMLFromDB")
    
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th></th>
    </tr>


@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.IdPokemon }) |
            @Html.ActionLink("Посмотреть", "Details", new { id=item.IdPokemon }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.IdPokemon })
        </td>
    </tr>
}

</table>
