@model Pokemon

@{
    ViewBag.Title = "Информация о покемоне";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Информация о покемоне</h2>

<div>
    <h4>Покемон</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.title)
        </dt>

        <dd>
           Название: @Html.DisplayFor(model => model.title)
        </dd>

        <dd>
            <div class="display-label"><b>Типы</b></div>
            <ul>
                @foreach (PType c in Model.PType)
                {
                    <li>@c.type</li>
                }
            </ul>
           
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.IdPokemon }) |
    @Html.ActionLink("Назад к списку покемона", "Index")
</p>
